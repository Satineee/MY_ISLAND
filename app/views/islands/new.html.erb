<div class="container">
  <div class="center">
    <div class="card-form">
      <%= simple_form_for @new_island do |f| %>
      <%= f.input :name, :placeholder => "An amazing name for a beautiful island", class:"form" %>
      <%= f.input :location, :placeholder => "Somewhere in paradise", class:"form"  %>
      <%= f.input :ocean, :collection => ["Atlantic Ocean", "Arctic Ocean", "Pacific Ocean", "Indian Ocean"] %>
      <%= f.input :price, :placeholder => "A price has its value", class:"form"  %>
      <%= f.input :description, class:"form" %>
      <%= f.input :photo, as: :file %>
      <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>