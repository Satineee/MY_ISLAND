<div class="container">
  <div class="content">
    <div class="user-bar d-flex justify-content-between">
      <h1>Welcome <%= @name %>! </h1>
      <%= link_to 'Add an island', new_island_path, class: 'btn btn-user' %>
    </div>
    <div class="user">
      <div class="user-info d-flex justify-content-around">
        <div class="islands">
          <h3>My Islands</h3>
          <% @islands.each do |island| %>
            <%= link_to island_path(island), class:"text-decoration-none" do %>
            <div class="card-island d-flex mt-5">
              <div class="mr-4">
                <% if island.photo.attached? %>
                  <%= cl_image_tag island.photo.key, height: 200, width: 300, crop: :fill, class: 'img' %>
                <% end %>
              </div>
              <div class="pl-4 pt-5">
                <ul>
                <strong><span class="text-name color-black"><%= island.name %></span></strong>
                </ul>
                <ul>
                  <span class="text-name color-black" id="text-location"><%= island.location %></span>
                </ul>
              </div>
            </div>
          <% end %>
        <% end %>

        </div>
        <div class="bookings">
          <h3>My Bookings</h3>
        </div>
      </div>
    </div>
  </div>
</div>
